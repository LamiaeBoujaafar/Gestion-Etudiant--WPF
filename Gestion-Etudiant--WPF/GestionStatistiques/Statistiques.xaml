<UserControl
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Gestion_Etudiant__WPF.GestionStatistiques"
             xmlns:dxc="http://schemas.devexpress.com/winfx/2008/xaml/charts" 
            x:Class="Gestion_Etudiant__WPF.GestionStatistiques.Statistiques"
             mc:Ignorable="d" 
             >
    <Grid Background="#f8f1f1" Height="540" Width="1010">


        <dxc:ChartControl x:Name="chart1">
            <dxc:ChartControl.Titles>
                <dxc:Title Content="Nombre des étudiants par Filière" Foreground="#552B60" FontWeight="Bold" FontStyle="Italic" FontSize="36" FontFamily="Segoe UI Black"/>
            </dxc:ChartControl.Titles>
            <dxc:ChartControl.Legends>
                <dxc:Legend x:Name="legend1"/>
            </dxc:ChartControl.Legends>

            <dxc:XYDiagram3D x:Name="Diagram3D" PerspectiveAngle="28" ZoomPercent="110">
            </dxc:XYDiagram3D>
        </dxc:ChartControl>


    </Grid>
</UserControl>
